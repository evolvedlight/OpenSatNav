<LinearLayout android:id="@+id/TripStatistics" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"  
	android:orientation="vertical" 
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<LinearLayout android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:orientation="vertical" android:layout_weight="1">

		<TextView android:text="@string/current_speed_label"
			android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffff"
			android:padding="10sp" android:layout_width="fill_parent" android:layout_height="wrap_content">
		</TextView>
		<TextView android:id="@+id/current_speed" android:text="@string/not_available_string"
			android:textSize="30sp" android:textStyle="bold" android:textColor="#ffffff"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal">
		</TextView>
	
		<TextView android:text="@string/aver_trip_speed_label" android:layout_width="fill_parent"
			android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffff"
			android:padding="10sp" android:layout_height="wrap_content">
		</TextView>
		<TextView android:id="@+id/aver_trip_speed" android:text="@string/not_available_string"
			android:textSize="30sp" android:textStyle="bold" android:textColor="#ffffff"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal">
		</TextView>
	
		<TextView android:text="@string/trip_distance_label" android:layout_width="fill_parent"
			android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffff"
			android:padding="10sp" android:layout_height="wrap_content">
		</TextView>
		<TextView android:id="@+id/trip_distance" android:text="@string/not_available_string"
			android:textSize="30sp" android:textStyle="bold" android:textColor="#ffffff"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal">
		</TextView>
	
		<TextView android:text="@string/trip_duration_label" android:layout_width="fill_parent"
			android:textSize="18sp" android:textStyle="bold" android:textColor="#ffffff"
			android:padding="10sp" android:layout_height="wrap_content">
		</TextView>
		<TextView android:id="@+id/trip_duration" android:text="@string/not_available_string"
			android:textSize="30sp" android:textStyle="bold" android:textColor="#ffffff"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:gravity="center_horizontal">
		</TextView>
	</LinearLayout>
		
	<LinearLayout android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:orientation="horizontal" android:gravity="right" >
		<Button android:id="@+id/resetStatistics" android:text="@string/reset_trip_statistics"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
				
		<Button android:id="@+id/closeStatistics" android:text="@string/close_statistics_view"
				android:layout_width="wrap_content" android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>

